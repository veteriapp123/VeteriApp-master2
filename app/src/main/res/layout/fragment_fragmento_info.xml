<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".Fragmentos.fragmento_info">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="439dp"
        android:src="@drawable/dog" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="43dp"
            android:text="Nombre Del Articulo"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="152dp"
            android:text="Descripcion Del Articulo"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnAgregarArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="123dp"
            android:layout_marginStart="136dp"
            android:background="@color/colorPrimary"
            android:text="AGREGAR" />

        <EditText
            android:id="@+id/txtDescripcionArticulo"
            android:layout_width="304dp"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="29dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtNombreArticulo"
            android:layout_width="297dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtDescripcionArticulo"
            android:layout_marginTop="78dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>

</FrameLayout>